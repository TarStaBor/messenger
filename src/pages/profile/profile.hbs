<div class="profile">

    <div class="profile__left-side link-opacity" page="chat" >
        <img class="profile__back-arrow" page="chat" alt="back-arrow" src="/src/assets/back-arrow.svg"/>
    </div>

    <div class="profile__right-side">
        <div class="profile__content">
            <div class="profile__avatar-section">
                <div class="profile__profile_overlay">
                    <h1 class="profile__avatar-title">Поменять
                        аватар</h1>
                </div>

                <div class="profile__avatar ">
                    <img class="profile__avatar_icon" alt="avatar" src=/src/assets/avatar.svg />
                </div>

                <h1 class="profile__avatar-subtitle">Иван</h1>
            </div>

            <form class="profile__form">
                {{{ InputField name="email" label="Почта" type="text" placeholder="pochta@yandex.ru" disabled=true  env="profile" }}}
                {{{ InputField name="login" label="Логин" type="text" placeholder="ivanivanov" disabled=true env="profile" }}}
                {{{ InputField name="first_name" label="Имя" type="text" placeholder="Иван" disabled=true env="profile" }}}
                {{{ InputField name="second_name" label="Фамилия" type="text" placeholder="Иванов" disabled=true env="profile" }}}
                {{{ InputField name="display_name" label="Имя в чате" type="text" placeholder="Иван" disabled=true env="profile" }}}
                {{{ InputField name="phone" label="Телефон" type="text" placeholder="+7 (909) 967 30 30" disabled=true env="profile" }}}
            </form>

            {{{ ProfileButton label="Изменить данные" onClick=handleEditProfile}}}
            {{{ ProfileButton label="Изменить пароль"  onClick=handleEditPassword}}}
            {{{ ProfileButton label="Выйти" exit=true  onClick=handleLogout}}}
        </div>
    </div>
</div>
