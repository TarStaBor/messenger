<main class="container">
    {{#> FormAuth}}
        {{{ Title title="Вход" }}}
    <div class="container__inputs">
        {{{ InputField name="login" label="Логин" id="login" type="text" env="auth" ref="login" validate=validate.login}}}
        {{{ InputField name="password" label="Пароль" type="password" env="auth" ref="password" validate=validate.password}}}
    </div>
        {{{ Button
              label="Авторизоваться"
              type="primary"
              onClick=handleLogin
        }}}
        {{{ Link
              label="Нет аккаунта?"
              onClick=handleRegister
        }}}
    {{/FormAuth}}
</main>
