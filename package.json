{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "lint:ts": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm-run-all --parallel lint:css lint:ts",
    "lint:fix-ts": "eslint . --ext ts,tsx --fix",
    "lint:fix-css": "stylelint \"src/**/*.css\" --fix",
    "lint:fix": "npm-run-all --parallel lint:fix-ts lint:fix-css",
    "test": "mocha",
    "start": "npm ci && npm run build && node server.cjs",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "npm run lint:ts",
      "npm run test"
    ],
    "*.{scss, css}": [
      "npm run lint:css"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/chai": "4.3.16",
    "@types/mocha": "10.0.6",
    "@types/node": "20.14.2",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "7.12.0",
    "@typescript-eslint/parser": "7.12.0",
    "chai": "5.1.1",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-prettier": "5.1.3",
    "express": "4.19.2",
    "husky": "9.0.11",
    "jsdom": "24.1.0",
    "lint-staged": "15.2.5",
    "mocha": "10.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.1",
    "sinon": "18.0.0",
    "stylelint": "16.6.1",
    "stylelint-config-standard": "36.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vite": "5.2.13"
  },
  "dependencies": {
    "handlebars": "4.7.8",
    "nanoid": "5.0.7"
  }
}
